<div class="container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="field">
    <%= f.label :email, class: "col-md-2 control-label text-right" %><br />
    <div class="col-md-9">
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>

<div class="row">
  <div class="field">
    <%= f.label :password, class: "col-md-2 control-label text-right" %>
    <br />
    <div class="col-md-9">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>

  <div class="row">
    <div class="col-md-offset-3 text-right">
      <div class="actions">
        <%= f.submit "Log in", :class => "btn btn-default col-md-9 text-right login" %>
      </div>
    </div>
  </div>

  <div class="row">
    <% if devise_mapping.rememberable? -%>
      <div class="field col-md-3 text-right">
        <br>
        <%= f.check_box :remember_me %>
          <%= f.label :remember_me%>
      </div>
      <div class="col-md-9">
      </div>
    <% end -%>
  </div>

      <% end %>

<%= render "devise/shared/links" %>
</div>

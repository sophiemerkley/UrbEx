<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="field">
      <%= f.label :username, class: "required col-sm-2 control-label text-right" %> <br>
       <div class="col-sm-9">
         <%= f.text_field :username, autofocus: true, class: "form-control", :required => true %>
       </div>
       <div class="col-sm-1">
       </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :email, class: "required col-sm-2 control-label text-right" %><br />
      <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control", :required => true %>
      </div>
      <div class="col-sm-1">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
        <%= f.label :password, class: "required col-sm-2 control-label text-right" %>
        <% if @minimum_password_length %>
        <em class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "off",  class: "form-control" %>
        </div>
        <div class="col-sm-1">
        </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :password_confirmation, class: "required col-sm-2 control-label text-right" %><br />
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off",  class: "form-control" %>
      </div>
      <div class="col-sm-1">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :image, class: "col-sm-2 control-label text-right" %> <br>
      <div class="col-md-9">
      <%= f.file_field :image, class: "form-control-file" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :tell_us_about_yourself, class: "col-sm-2 control-label text-right" %> <br>
      <div class="col-sm-9">
        <%= f.text_area :user_description, class: "form-control", rows: "4"%>
        <br>
      </div>
      <div class="col-sm-1">
      </div>
    </div>
  </div>


  <div class="row">
      <div class="actions col-sm-offset-3 text-right">
      <%= f.submit "Sign up", :id => 'main_menu_submit_button', :class => "btn btn-default col-sm-9 text-right"%>
    </div>
  </div>

  <% end %>


  <%= render "devise/shared/links" %>

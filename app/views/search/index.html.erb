<div class="container">
<h1>Search Explorers</h1>

<strong><p>Find a user by username, email, or description keyword:</p></strong>
<form action="/search/index" method="get">
  <input type="text" name="search">
  <input class="btn btn-default" type="submit" value="Search">
</form>
<br>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Username</th>
      <th>Email</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |user|%>
      <%if !user.has_role?(:admin)%>
        <tr>
          <td>
            <%if !user.image_file_name.nil?%>
              <a href="/profile/<%=user.username%>">
                <%= image_tag user.image.url(:small) %>
              </a>
            <%end%>
          </td>
          <td><a href="/profile/<%=user.username%>"><%=user.username%></a></td>
          <td><%=user.email%></td>
          <td><%=user.user_description%></td>
        </tr>
      <%end%>
    <%end%>
  </tbody>
</table>
</div>

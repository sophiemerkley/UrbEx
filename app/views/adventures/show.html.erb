
<div class="row">
  <div class="col-md-6">
    <p>
      <strong>Name:</strong>
      <%= @adventure.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @adventure.address %>
    </p>

    <p>
      <strong>Directions:</strong>
      <%= @adventure.directions %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @adventure.description %>
    </p>

    <p>
      <strong>Last updated by:</strong>
      <%= @adventure.users[0].username %>
    </p>

    <p>
    <strong>Category:</strong>
    <%= @adventure.category.category_name %>
    </p>


</div>

  <div class="col-md-6">

    <table class="gallery">
      <tbody>
            <% @images.each do |set_of_images| %>
              <%= render_gallery_for set_of_images,
                  original: -> image { image.image.url() },
                  thumbnail: -> image { image.image.url(:thumbnail) },
                  list_tag: :tr, item_tag: :td, item_class: 'image' %>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
<hr>
<!-- Map starts -->
<div id="adventureMap" data-adventure-id="<%=@adventure.id%>">
</div>
<!-- Map ends  -->

<%= link_to 'Add New Post', new_post_path + "?adventure_id=" + @adventure.id.to_s, :class =>'btn btn-default' %>

<% if !current_user.nil? %>
  <%= link_to 'Edit', edit_adventure_path(@adventure) %>
<% end %>
| <%= link_to 'Back', adventures_path %>
<hr>


<div class="row">
  <div class="col-md-6">
    <p>
      <strong>Name:</strong>
      <%= @adventure.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @adventure.address %>
    </p>

    <p>
      <strong>Directions:</strong>
      <%= @adventure.directions %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @adventure.description %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @adventure.user.username %>
    </p>

    <p>
    <strong>Category:</strong>
    <%= @adventure.category.category_name %>
    </p>

</div>

  <div class="col-md-6">

    <table class="gallery">
      <tbody>
        <% @images.each do |set_of_images| %>
          <%= render_gallery_for set_of_images,
              original: -> image { image.image.url() },
              thumbnail: -> image { image.image.url(:thumbnail) },
              list_tag: :tr, item_tag: :td, item_class: 'image' %>
        <% end %>

      </tbody>
    </table>

  </div>

</div>


<% if !current_user.nil? %>
  <%= link_to 'Edit', edit_adventure_path(@adventure) %>
<% end %>
| <%= link_to 'Back', adventures_path %>

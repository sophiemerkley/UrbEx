
<div class="row">
  <div class="col-md-6">
    <p>
      <strong>Name:</strong>
      <%= @adventure.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @adventure.address %>
    </p>

    <p>
      <strong>Directions:</strong>
      <%= @adventure.directions %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @adventure.description %>
    </p>

    <p>
      <strong>Last updated by:</strong>
      <%= @adventure.users[0].username %>
    </p>

    <p>
    <strong>Category:</strong>
    <%= @adventure.category.category_name %>
    </p>

    <p>
      <%= image_tag @adventure.image.url(:medium) %>
    </p>
</div>

  <div class="col-md-6">

      <table class="gallery">
        <tbody>

          <%= render_gallery_for @images[0..2],
            original: -> image { image.url() },
            thumbnail: -> image { image.url(:medium) }, list_tag: :tr, item_tag: :td, item_class: 'image' %>

          <%= render_gallery_for @images[3..5],
            original: -> image { image.url() },
            thumbnail: -> image { image.url(:medium) }, list_tag: :tr, item_tag: :td, item_class: 'image' %>

          <%= render_gallery_for @images[6..8],
            original: -> image { image.url() },
            thumbnail: -> image { image.url(:medium) }, list_tag: :tr, item_tag: :td, item_class: 'image' %>

          <%= render_gallery_for @images[9..11],
            original: -> image { image.url() },
            thumbnail: -> image { image.url(:medium) }, list_tag: :tr, item_tag: :td, item_class: 'image' %>

        </tbody>
      </table>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6">
    <!-- Map starts -->
    <div id="adventureMap" data-adventure-id="<%=@adventure.id%>">
    </div>
    <!-- Map ends  -->
  </div>
  <div class="col-sm-6">
    <h3>Adventure Posts</h3>
    <ul>
      <%@posts.each do |post|%>
        <li><a href="/posts/<%=post.id%>"><%=post.title%></a></li>
      <%end%>
    </ul>
  </div>
</div>
<%= link_to 'Add New Post', new_post_path + "?adventure_id=" + @adventure.id.to_s, :class =>'btn btn-default' %>

<% if !current_user.nil? %>
  <%= link_to 'Edit', edit_adventure_path(@adventure) %>
<% end %>
| <%= link_to 'Back', adventures_path %>
<hr>

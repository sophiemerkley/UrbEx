<%= form_for(@adventure) do |f| %>
  <% if @adventure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@adventure.errors.count, "error") %> prohibited this adventure from being saved:</h2>

      <ul>
      <% @adventure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :directions %><br>
    <%= f.text_area :directions %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :adventure_image %> <br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :user_id %>  <%=current_user.username%> <br>
    <%=f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :choose_a_category %> <br>
    <%= select(:adventure, :category_id, @categories_for_select)%>
  </div><br>
  <div class="actions">
    <%= f.submit :class => "btn btn-default" %>
  </div>
<% end %>
